<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rotationX="0"
    android:background="@drawable/newwallp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="Find the player"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80777777"
        android:layout_margin="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_bar"
            android:inputType="textShortMessage"
            android:background="@drawable/cool_ed"
            android:hint="  Search..."
            android:layout_margin="5dp"
            android:textSize="35dp"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:onClick="search"
            android:background="@drawable/cool_button"
            android:drawableTop="@drawable/seachicon"
            />

    </LinearLayout>



    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sortActivity"
        android:text="SORT PLAYERS"
        android:fontFamily="@font/alata"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:background="@drawable/cool_button"
        android:layout_margin="10dp"
        android:layout_weight="0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom|right">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="145dp"
            android:gravity="bottom"
            android:src="@drawable/eb"

            />

    </LinearLayout>




</LinearLayout>