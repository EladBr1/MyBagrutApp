<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerDisplay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:id="@+id/titName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="45dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:src="@drawable/loader_pic"
            android:id="@+id/pic"
            />

        <TableLayout
            android:stretchColumns="*"
            android:shrinkColumns="0,1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#C2CAEF"
            >

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#7B81E4"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:layout_column="0"
                    android:text="Personal Information"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left">

                <TextView
                    android:background="#C2CAEF"
                    android:text="Full name: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_column="0"/>

                <TextView
                    android:layout_marginRight="15dp"
                    android:id="@+id/tvFullName"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_column="1"/>

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                >

                <TextView
                    android:background="#C2CAEF"
                    android:text="Date of birth: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView

                    android:id="@+id/tvBirthDay"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                >

                <TextView
                    android:background="#C2CAEF"
                    android:text="Age: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAge"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                >

                <TextView
                    android:background="#C2CAEF"
                    android:text="Height: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvHeight"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                >

                <TextView
                    android:background="#C2CAEF"
                    android:text="Position: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPos"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#7B81E4"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Club Information"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                >

                <TextView
                    android:background="#C2CAEF"
                    android:text="Current team: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTeam"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:layout_weight="5"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                >

                <TextView
                    android:background="#C2CAEF"
                    android:text="Number: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNum"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#7B81E4"
                android:gravity="center">

                <TextView
                    android:layout_gravity="center"
                    android:text="National Team"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                >

                <TextView
                    android:background="#C2CAEF"
                    android:text="National team: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNtlTeam"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                >

                <TextView
                    android:background="#C2CAEF"
                    android:text="Goals (in national team): "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNtlGoals"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    />

            </TableRow>

        </TableLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Stats: "
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_gravity="left"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals: "
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/tvGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="25dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asissts: "
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/tvAsissts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="25dp"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Career:  "
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_gravity="left"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvFormerTeams"
            android:text=""
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio:  "
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_gravity="left"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvInfo"
            android:text=""
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wikipedie link:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/wikiUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#225AFF"
            android:textSize="20dp"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/copyWikiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COPY WIKIPEDIA LINK"
            android:textSize="15dp"
            android:background="@drawable/cool_button"
            android:textColor="@android:color/white"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram link:"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instaUrl"
            android:text=""
            android:textColor="#225AFF"
            android:textSize="20dp"
            android:layout_gravity="left"
            />
        <Button
            android:id="@+id/copyInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COPY INSTAGRAM LINK"
            android:textSize="15dp"
            android:background="@drawable/cool_button"
            android:textColor="@android:color/white"
            android:layout_gravity="left"/>


    </LinearLayout>

</ScrollView>