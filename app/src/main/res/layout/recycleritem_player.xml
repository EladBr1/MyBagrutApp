<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvPlName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvNamePl"
        android:layout_width="246dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:text="name"
        android:textColor="#000000"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvRequiredNum"
        android:layout_width="56dp"
        android:layout_height="73dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="7dp"
        android:text="num"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/team"
        app:layout_constraintStart_toEndOf="@+id/tvNamePl"
        app:layout_constraintTop_toTopOf="@+id/tvNamePl"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/team"
        android:layout_width="246dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNamePl" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/tvRequiredNum"
        app:layout_constraintTop_toBottomOf="@+id/tvRequiredNum" />
</androidx.constraintlayout.widget.ConstraintLayout>